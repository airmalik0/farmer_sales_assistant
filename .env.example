# База данных
# Для локальной разработки (используйте свой локальный PostgreSQL)
DATABASE_URL=postgresql://postgres@localhost:5432/farmer_crm

# Для Docker (автоматически используется в docker-compose)
# DATABASE_URL=postgresql://postgres:farmer_postgres_password@postgres:5432/farmer_crm

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_here
FARMER_TELEGRAM_ID=your_telegram_user_id_here

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Backend URL
# Для локальной разработки
BACKEND_URL=http://localhost:8000
# Для Docker (автоматически используется в docker-compose)
# BACKEND_URL=http://backend:8000

# Google Sheets (опционально)
GOOGLE_SHEETS_CREDENTIALS_FILE=credentials.json
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id_here
GOOGLE_SHEETS_RANGE=Sheet1!A1:Z1000

# Логирование
LOG_LEVEL=INFO
